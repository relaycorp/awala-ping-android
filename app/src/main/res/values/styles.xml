<resources>

    <style name="Widget.Ping" parent="" />

    <style name="Widget.Ping.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Ping.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Ping.ToolbarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Widget.Ping.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Ping.Body</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="Widget.Ping.ToolbarTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?titleTextAppearance</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Ping.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="iconTint">?colorOnSecondary</item>
    </style>

    <style name="Widget.Ping.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorOnSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:backgroundTint">?android:windowBackground</item>
    </style>

    <style name="Widget.Ping.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.Ping.Button.Image" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?iconTint</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.Ping.ExtendedFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Widget.Ping.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?android:textColorSecondary</item>
        <item name="hintTextColor">?android:textColorSecondary</item>
    </style>

    <!-- Dialog -->

    <style name="Widget.Ping.DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Ping.DialogButton.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Widget.Ping.DialogButton.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorOnSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Widget.Ping.DialogButton.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <!-- Fields / Form -->

    <style name="Widget.Ping.Label">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Ping.Body2</item>
    </style>
</resources>
